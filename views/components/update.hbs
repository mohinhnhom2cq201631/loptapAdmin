<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{> nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->


            <form action="" method="POST" class="form-horizontal">
                <input type="hidden" name="_id">
                <div class="form-group">
                    <label>Tên linh kiện</label>
                    <input type="text" class="form-control" value={{component.name}} name="name">
                </div>
                <div class="form-group">
                    <label for="component" class="col-md-4 control-label">Loại linh kiện</label>
                    <select class="col-md-6 form-control" name="type" id="exampleFormControlSelect1">
                        <option value="Dòng laptop">Dòng laptop</option>
                        <option value="Chip">Chip</option>
                        <option value="RAM">RAM</option>
                        <option value="VGA">VGA</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                     <textarea id="mt" cols="110" rows="8" name="description" required>{{component.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>{{pageTitle}}</button>
                </div>
            </form>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>