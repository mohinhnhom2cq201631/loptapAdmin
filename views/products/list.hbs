<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->
            <!-- Editable table -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <a href="products/add"><button type="button" class="btn btn-success">Thêm mới</button></a>
                    </div>
                    </br>
                    <!-- End mainmenu area -->
                    <div class="row content">
                        <div class="panel-body">
                            <div class="tab-content">
                                <br role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                                    <table class="table table-striped table-bordered table-list" id="ta1">
                                        <thead>
                                        <tr>
                                            <th>Tên sản phẩm</th>
                                            <th>Thương hiệu</th>
                                            <th>Thông số</th>
                                            <th>Kích cỡ</th>
                                            <th>Giá</th>
                                            <th>Mô tả</th>
                                            <th>Chức năng</th>
                                        </tr>
                                        </thead>
                                        {{#each productList}}
                                        <tbody>
                                        <tr>
                                            <td>{{this.name}}</td>
                                            <td>{{this.brand.name}}</td>
                                            <td id="productComponents">
                                                {{#each this.components}}
                                                    {{this.nanme}}
                                                {{/each}}
                                            </td>
                                            <td>{{this.size}}</td>
                                            <td>{{this.price}}</td> 
                                            <td>{{this.description}}</td>                                        
                                            <td>
                                                <a href="products/{{this._id}}"><i class ="fa fa-pen"></i></a>
                                                <a href="products/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        </tbody>
                                        {{/each}}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Editable table -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
