<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{> nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <div class="modal-body">
                <div class="row content">
                    <div class="col-sm-12">
                        <form method="POST" action="" class="form-horizontal">
                            <div class="panel panel-success">
                                <div class="panel-heading"
                                    style="font-size: 25px;font-weight: bold; background-color: rgb(28, 188, 156);color: white">
                                    &nbsp; Thêm mới Sản Phẩm</div>
                                <div class="row">
                                    <div class="col-md">
                                        <div class="form-group">
                                            <label for="name" class="col-md-4 control-label">Tên Sản Phẩm</label>
                                            <div class="col-md-8">
                                                <input type="text" class="form-control" value={{product.name}} id="tensp" name="name" required>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="form-group">
                                                <label for="brand" class="col-md-4 control-label">Thương hiệu</label>
                                                <select class="col-md-6 form-control" name="brand">
                                                    {{#each brands}}
                                                    <option value={{this._id}}>{{this.name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="form-group">
                                                <label for="purpose" class="col-md-4 control-label">Chuyên dùng</label>
                                                <select class="col-md-6 form-control" name="purpose">
                                                    {{#each purposeComponents}}
                                                    <option value={{this._id}}>{{this.name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <label for="price" class="col-md-4 control-label">Giá</label>
                                                    <div class="col-md-8">
                                                        <input type="number" value={{product.price}} class="form-control" id="kt" name="price"
                                                            required>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="manufacturer" class="col-md-4 control-label">Size</label>
                                            <select class="col-md-6 form-control" name="size"
                                                id="exampleFormControlSelect1">
                                                <option value="13">13 inch</option>
                                                <option value="14">14 inch</option>
                                                <option value="15">15 inch</option>
                                                <option value="17">17 inch</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="manufacturer" class="col-md-4 control-label">Chip</label>
                                            <select class="col-md-6 form-control" name="chip"
                                                id="exampleFormControlSelect1">
                                                {{#each chipComponents}}
                                                <option value={{this._id}}>{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="manufacturer" class="col-md-4 control-label">VGA</label>
                                            <select class="col-md-6 form-control" name="vga"
                                                id="exampleFormControlSelect1">
                                                {{#each vgaComponents}}
                                                <option value={{this._id}}>{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="manufacturer" class="col-md-4 control-label">RAM</label>
                                            <select class="col-md-6 form-control" name="ram"
                                                id="exampleFormControlSelect1">
                                                {{#each ramComponents}}
                                                <option value={{this._id}}>{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="info" class="col-md-4 control-label">Mô Tả</label>
                                            <div class="col-md-8">
                                                <textarea id="mt" cols="110" rows="8" name="description"
                                                    required>{{product.description}}</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Hình Ảnh</label>
                                            <div class="col-md-12">
                                                <!--<input type="file" accept="image/*" class="form-control" id="file"
                                                    name="img" required onchange="readURL(this);">-->
                                                <input text="text" name="img" class="form-control" required>{{product.img}}
                                            </div>
                                            </br>
                                        </div>
                                    </div>
                                </div>

                                <div class="panel-footer">
                                    <div class="col">
                                        <button type="submit" class="btn btn-success">{{pageTitle}}</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>